import java.util.*;

class Solution {
    public String reverseParentheses(String s) {
        Stack<StringBuilder> stack = new Stack<>();
        StringBuilder current = new StringBuilder();

        for (char ch : s.toCharArray()) {
            if (ch == '(') {
                stack.push(current);
                current = new StringBuilder();
            } else if (ch == ')') {
                StringBuilder reversed = current.reverse();  // Reverse the current string
                current = stack.pop().append(reversed);  // Append to previous string
            } else {
                current.append(ch);
            }
        }

        return current.toString();
    }
}
